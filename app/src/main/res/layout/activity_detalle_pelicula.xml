<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".detalle_pelicula">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/iv_pelicula_imagen"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:srcCompat="@drawable/halo" />

    <TextView
        android:id="@+id/NombreSeriePelicula"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:paddingLeft="25dp"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="@color/yellow"
        android:text="Halo" />

    <TextView
        android:id="@+id/tvserie_pelicula_Desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:paddingHorizontal="25dp"
        android:textSize="14sp"
        android:textColor="@color/yellow"
        android:text="Aqui descripcion de la Serie_Pelicula" />


</LinearLayout>
</LinearLayout>